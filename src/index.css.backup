/* Modern CSS with Tailwind-like utility classes */

/* CSS Variables for design system */
:root {
  /* Colors - Moroccan-inspired palette */
  --primary-50: #faf8f5;
  --primary-100: #f5f0e8;
  --primary-400: #d4a574;
  --primary-500: #c19956;
  
  --secondary-500: #8b4513;
  --secondary-600: #7a3d11;
  
  --accent-500: #c4302b;
  --accent-600: #b02b26;
  
  --neutral-50: #faf8f5;
  --neutral-200: #e5d4c1;
  --neutral-400: #6b5b4f;
  --neutral-500: #2c1810;
  
  /* Spacing */
  --space-1: 0.25rem;
  --space-2: 0.5rem;
  --space-3: 0.75rem;
  --space-4: 1rem;
  --space-6: 1.5rem;
  --space-8: 2rem;
  --space-12: 3rem;
  --space-16: 4rem;
  
  /* Typography */
  --text-sm: 0.875rem;
  --text-base: 1rem;
  --text-lg: 1.125rem;
  --text-xl: 1.25rem;
  --text-2xl: 1.5rem;
  --text-3xl: 1.875rem;
  --text-4xl: 2.25rem;
  --text-5xl: 3rem;
  
  /* Border radius */
  --rounded: 0.25rem;
  --rounded-md: 0.375rem;
  --rounded-lg: 0.5rem;
  --rounded-xl: 0.75rem;
  
  /* Shadows */
  --shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
  --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
  --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
}

/* Reset & base styles */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: system-ui, -apple-system, sans-serif;
  color: var(--neutral-500);
  background-color: var(--neutral-50);
  line-height: 1.6;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

h1, h2, h3, h4, h5, h6 {
  font-family: Georgia, serif;
  color: var(--neutral-500);
  font-weight: 600;
  line-height: 1.2;
}

/* Utility classes - Tailwind-inspired */

/* Display & Layout */
.flex { display: flex; }
.grid { display: grid; }
.block { display: block; }
.inline-block { display: inline-block; }
.hidden { display: none; }

.flex-col { flex-direction: column; }
.flex-row { flex-direction: row; }
.items-center { align-items: center; }
.justify-center { justify-content: center; }
.justify-between { justify-content: space-between; }

.grid-cols-1 { grid-template-columns: repeat(1, minmax(0, 1fr)); }
.grid-cols-2 { grid-template-columns: repeat(2, minmax(0, 1fr)); }
.grid-cols-3 { grid-template-columns: repeat(3, minmax(0, 1fr)); }

/* Spacing */
.p-0 { padding: 0; }
.p-4 { padding: var(--space-4); }
.p-6 { padding: var(--space-6); }
.p-8 { padding: var(--space-8); }
.p-16 { padding: var(--space-16); }

.px-4 { padding-left: var(--space-4); padding-right: var(--space-4); }
.px-6 { padding-left: var(--space-6); padding-right: var(--space-6); }
.py-3 { padding-top: var(--space-3); padding-bottom: var(--space-3); }
.py-4 { padding-top: var(--space-4); padding-bottom: var(--space-4); }
.py-6 { padding-top: var(--space-6); padding-bottom: var(--space-6); }
.py-8 { padding-top: var(--space-8); padding-bottom: var(--space-8); }
.py-16 { padding-top: var(--space-16); padding-bottom: var(--space-16); }

.m-0 { margin: 0; }
.mb-4 { margin-bottom: var(--space-4); }
.mb-6 { margin-bottom: var(--space-6); }
.mb-8 { margin-bottom: var(--space-8); }
.mb-16 { margin-bottom: var(--space-16); }

.gap-6 { gap: var(--space-6); }
.gap-8 { gap: var(--space-8); }
.gap-16 { gap: var(--space-16); }

/* Sizing */
.w-full { width: 100%; }
.h-48 { height: 12rem; }
.h-80 { height: 20rem; }
.h-96 { height: 24rem; }
.min-h-48 { min-height: 12rem; }
.min-h-screen { min-height: 100vh; }
.max-w-4xl { max-width: 56rem; }
.max-w-5xl { max-width: 64rem; }
.max-w-6xl { max-width: 72rem; }

/* Positioning */
.relative { position: relative; }
.absolute { position: absolute; }
.sticky { position: sticky; }
.top-0 { top: 0; }
.z-50 { z-index: 50; }

.mx-auto { margin-left: auto; margin-right: auto; }

/* Typography */
.text-sm { font-size: var(--text-sm); }
.text-base { font-size: var(--text-base); }
.text-lg { font-size: var(--text-lg); }
.text-xl { font-size: var(--text-xl); }
.text-2xl { font-size: var(--text-2xl); }
.text-3xl { font-size: var(--text-3xl); }
.text-4xl { font-size: var(--text-4xl); }
.text-5xl { font-size: var(--text-5xl); }

.font-medium { font-weight: 500; }
.font-semibold { font-weight: 600; }
.font-bold { font-weight: 700; }

.text-center { text-align: center; }
.italic { font-style: italic; }
.leading-relaxed { line-height: 1.625; }
.leading-7 { line-height: 1.75rem; }

/* Colors */
.text-primary-400 { color: var(--primary-400); }
.text-secondary-500 { color: var(--secondary-500); }
.text-accent-500 { color: var(--accent-500); }
.text-neutral-400 { color: var(--neutral-400); }
.text-neutral-500 { color: var(--neutral-500); }
.text-white { color: white; }

.bg-white { background-color: white; }
.bg-neutral-50 { background-color: var(--neutral-50); }
.bg-neutral-200 { background-color: var(--neutral-200); }
.bg-primary-400 { background-color: var(--primary-400); }
.bg-secondary-500 { background-color: var(--secondary-500); }
.bg-accent-500 { background-color: var(--accent-500); }

/* Borders */
.border { border-width: 1px; }
.border-2 { border-width: 2px; }
.border-neutral-200 { border-color: var(--neutral-200); }
.border-primary-400 { border-color: var(--primary-400); }
.rounded { border-radius: var(--rounded); }
.rounded-lg { border-radius: var(--rounded-lg); }
.rounded-xl { border-radius: var(--rounded-xl); }

/* Shadows */
.shadow { box-shadow: var(--shadow); }
.shadow-md { box-shadow: var(--shadow-md); }
.shadow-lg { box-shadow: var(--shadow-lg); }

/* Transitions */
.transition-all { transition: all 0.3s ease; }
.transition-colors { transition-property: color, background-color, border-color; transition-duration: 0.3s; }

/* Transforms */
.hover\:-translate-y-1:hover { transform: translateY(-0.25rem); }
.hover\:-translate-y-2:hover { transform: translateY(-0.5rem); }

/* Interactions */
.cursor-pointer { cursor: pointer; }
.no-underline { text-decoration: none; }

/* Component classes */
.btn-primary {
  background-color: var(--primary-400);
  color: var(--neutral-500);
  padding: var(--space-3) var(--space-6);
  border-radius: var(--rounded-lg);
  font-weight: 600;
  border: none;
  cursor: pointer;
  transition: all 0.3s ease;
  text-decoration: none;
  display: inline-block;
}

.btn-primary:hover {
  background-color: var(--secondary-500);
  color: white;
  transform: translateY(-2px);
}

.card {
  background: white;
  border-radius: var(--rounded-lg);
  box-shadow: var(--shadow-md);
  padding: var(--space-6);
  margin-bottom: var(--space-6);
}

.hero-gradient {
  background: linear-gradient(135deg, var(--primary-400), var(--secondary-500));
}

.form-input {
  width: 100%;
  padding: var(--space-3) var(--space-4);
  border: 2px solid var(--neutral-200);
  border-radius: var(--rounded-lg);
  font-size: var(--text-base);
  transition: border-color 0.3s ease;
}

.form-input:focus {
  outline: none;
  border-color: var(--primary-400);
}

.placeholder-image {
  background-color: var(--neutral-200);
  color: var(--neutral-400);
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 12rem;
  border-radius: var(--rounded-lg);
  font-style: italic;
  margin-bottom: var(--space-4);
}

/* Responsive utilities */
@media (max-width: 768px) {
  .md\:grid-cols-2 { grid-template-columns: repeat(1, minmax(0, 1fr)); }
  .md\:grid-cols-3 { grid-template-columns: repeat(1, minmax(0, 1fr)); }
  .md\:block { display: block; }
  .lg\:grid-cols-2 { grid-template-columns: repeat(1, minmax(0, 1fr)); }
  .lg\:grid-cols-3 { grid-template-columns: repeat(1, minmax(0, 1fr)); }
  .lg\:order-1 { order: 1; }
  .lg\:order-2 { order: 2; }
}

@media (min-width: 768px) {
  .md\:grid-cols-2 { grid-template-columns: repeat(2, minmax(0, 1fr)); }
  .md\:grid-cols-3 { grid-template-columns: repeat(3, minmax(0, 1fr)); }
  .md\:block { display: block; }
}

@media (min-width: 1024px) {
  .lg\:grid-cols-2 { grid-template-columns: repeat(2, minmax(0, 1fr)); }
  .lg\:grid-cols-3 { grid-template-columns: repeat(3, minmax(0, 1fr)); }
  .lg\:order-1 { order: 1; }
  .lg\:order-2 { order: 2; }
}
